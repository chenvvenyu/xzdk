page {
  background-color: #FFFFFF;
  width: 690rpx;
  margin: 0 30rpx;
}
page .uni-input {
  padding: 0 !important;
}
page .title {
  font-size: 20px;
  font-weight: bold;
}
page .content-box {
  margin: 0 20rpx;
  padding-top: 50rpx;
}
page .content-box .uni-input-group .uni-input-row {
  padding: 40rpx 0;
}
page .content-box .uni-input-group .uni-input-row image, page .content-box .uni-input-group .uni-input-row input {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
}
page .content-box .uni-input-group .uni-input-row input {
  margin-left: 20rpx;
  font-size: 32rpx;
}
page .content-box .agreement-box {
  margin: 40rpx 0;
  padding: 0 30rpx;
  font-size: 32rpx;
  color: #666666;
}
page .content-box .operation-box {
  margin-top: 60rpx;
}
page .content-box .operation-box .btnSubmit {
  border-radius: 50rpx;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #3399FE;
  color: #FFFFFF;
  font-size: 40rpx;
}

