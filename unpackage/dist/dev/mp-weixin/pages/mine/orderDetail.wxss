
.page{min-width: 100vw;min-height: 100vh;background-color: #F5F5F5;padding: 30rpx;box-sizing: border-box;}
.con-address,.order-info{padding: 30rpx;background-color: #FFFFFF;box-shadow: 0 0 20rpx #ccc;border-radius: 20rpx;}
.con-address .address-icon image{width: 54rpx;height: 216rpx;}
.con-address .address-des{padding-left: 40rpx;}
.address-des .title{font-size: 30rpx;font-weight: bold;}
.address-des .text{font-size: 28rpx;color: #888888;}
.address-sou{margin-bottom: 20rpx;}
.order-info{margin-top: 30rpx;}
.order-info .text{line-height: 60rpx;}
.btn-cancel{float: left;color: #333;font-size: 30rpx;line-height: 80rpx;border-radius: 40rpx;text-align: center;border:1rpx solid #888888;width: 250rpx;}
.btn-pay{float: right;height: 80rpx;width: 350rpx;line-height: 80rpx;border-radius: 40rpx;background: -webkit-linear-gradient(330deg, #3399FE 0%, #3399FE 100%);background: linear-gradient(120deg, #3399FE 0%, #3399FE 100%);color: #333;font-size: 30rpx;box-shadow: 0 0 20rpx #ccc;text-align: center;}
.btn-detail{float: right;height: 80rpx;width: 300rpx;line-height: 80rpx;border-radius: 40rpx;color: #333;font-size: 30rpx;text-align: center;border:1rpx solid #888888}
.btn-view{margin : 30rpx 0;}
.clr{clear: both;}
.btnSubmit {
	margin: 30rpx 0;
	border-radius: 50rpx;
	height: 100rpx;
	line-height: 100rpx;
	background-color: #3399FE;
	color: #FFFFFF;
}

