
.clr{clear: both;}
.page{
	min-width: 100vw;
	min-height: 100vh;
	background-color: #F5F5F5;
}
.scroll-h {
	width: 750rpx;
	height: 80rpx;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	white-space: nowrap;
	box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);
	background-color: #FFFFFF;
}
.uni-tab-item {
	display: inline-block;
	-webkit-flex-wrap: nowrap;
	        flex-wrap: nowrap;
	padding-left: 34rpx;
	padding-right: 34rpx;
}
.uni-tab-item-title {
    color: #555;
    font-size: 30rpx;
    height: 80rpx;
    line-height: 80rpx;
    -webkit-flex-wrap: nowrap;
            flex-wrap: nowrap;
    white-space: nowrap;
}
.uni-tab-item-title-active {
    color: #000000;
	border-bottom: 4rpx solid #3399FE;
}
.list{
	padding: 20rpx;
}
.item{
	width: 100%;
	background-color: #FFFFFF;
	box-shadow: 1rpx 1rpx 10rpx rgba(0, 0, 0, 0.1);
	margin-bottom: 20rpx;
	padding: 30rpx;
	box-sizing: border-box;
}
.item-1{
	font-size: 36rpx;color: #000000;line-height: 36rpx;font-weight: bold;border-bottom: 1rpx solid #F5F5F5;padding-bottom: 30rpx;
}
.item-1 text{font-size: 28rpx;margin-left: 40rpx;padding-left: 20rpx;font-weight: 300;position: relative;}
.item-1 text:before{
	position: absolute;width: 2rpx;left: 0;top: 0;bottom: 0;
	content: '';
	-webkit-transform: scaleY(.5);
	transform: scaleY(.5);
}
.item-1 .red{color:#DC535F;}
.item-1 .red:before{background-color: #DC535F;}
.item-1 .gray{color:#888888;}
.item-1 .gray:before{background-color: #888888;}
.time{line-height:60rpx;color: #888888;font-size: 24rpx;}
.time text{float: right;color: #000000;}
.address-1,.address-1-1,.address-2,.address-2-1{font-size: 30rpx;padding-left: 30rpx;line-height: 1.2;position: relative;}
.address-1:before,.address-2:before{
	position: absolute;width: 10rpx;height: 10rpx;left: 0;top: 13rpx;
	content: '';
	background-color: #DC535F;
	border-radius: 50%;
}
.address-1:before{background-color: #222222;}
.name-1,.name-2{font-size: 28rpx;color: #888888;margin-left: 30rpx;line-height: 1.2;}
.address-2{margin-top: 40rpx;}
.item-2{border-bottom: 1rpx solid #F5F5F5;padding-bottom: 30rpx;margin-bottom: 30rpx;}
.btn-cancel{float: left;color: #333;font-size: 30rpx;line-height: 80rpx;}
.btn-pay{float: right;height: 80rpx;width: 300rpx;line-height: 80rpx;border-radius: 40rpx;background: #FFFFFF;border: 1px solid #666666;color: #333;font-size: 30rpx;box-shadow: 0 0 20rpx #ccc;text-align: center;}
.btn-detail{float: right;height: 80rpx;width: 300rpx;line-height: 80rpx;border-radius: 40rpx;color: #333;font-size: 30rpx;text-align: center;border:1rpx solid #888888}


