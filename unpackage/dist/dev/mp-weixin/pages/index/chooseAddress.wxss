page {
  background-color: #FFFFFF;
  width: 690rpx;
  margin: 0 30rpx;
}
page .tab-box {
  margin-top: 30rpx;
}
page .content {
  margin-top: 10rpx;
}
page .content .area-box .area-row {
  margin-top: 20rpx;
}
page .content .area-box .area-row .area-item {
  width: 150rpx;
  height: 150rpx;
  box-sizing: border-box;
  border: 1rpx solid #eaeaea;
  text-align: center;
  color: #333333;
  margin: 10rpx;
  font-size: 26rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  line-height: 1.2;
}
page .content .area-box .area-row .area-active {
  border-color: #3399FE;
  border-top-width: 6rpx;
  border-top-color: #3399FE;
  border-bottom-width: 6rpx;
  border-bottom-color: #3399FE;
}
page .content .area-box .btnSureArea {
  position: fixed;
  width: 500rpx;
  height: 80rpx;
  border-radius: 40rpx;
  text-align: center;
  bottom: 50rpx;
  background-color: #3399FE;
  font-size: 32rpx;
  line-height: 80rpx;
  left: 125rpx;
  color: #FFFFFF;
}
page .content .address-box {
  margin-top: 10rpx;
}
page .content .address-box .address-row {
  border-bottom: 1rpx solid #F5F5F5;
  padding: 20rpx 0;
}
page .content .address-box .address-row .person {
  height: 60rpx;
}
page .content .address-box .address-row .person .name {
  color: #222222;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 60rpx;
  margin-right: 20rpx;
}
page .content .address-box .address-row .person .phone {
  color: #666666;
  font-size: 28rpx;
  line-height: 60rpx;
}
page .content .address-box .address-row .des {
  color: #888888;
  height: 40rpx;
  line-height: 40rpx;
}

