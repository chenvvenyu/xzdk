page {
  background-color: #F5F5F5;
}
page .container-warp {
  width: 690rpx;
  margin: 0 30rpx;
}
page .container-warp .content-block-size {
  border-radius: 30rpx;
  background-color: #FFFFFF;
  margin: 10px 0;
}
page .container-warp .content-block-size .cont_block {
  padding: 20rpx 40rpx;
}
page .container-warp .content-block-size .cont_block .con-address {
  padding: 40rpx 0;
}
page .container-warp .content-block-size .cont_block .con-address .address-icon image {
  width: 25px;
  height: 100px;
}
page .container-warp .content-block-size .cont_block .con-address .address-des {
  padding-left: 40rpx;
}
page .container-warp .content-block-size .cont_block .address-des .title {
  font-size: 14px;
  font-weight: bold;
}
page .container-warp .content-block-size .cont_block .address-des .text {
  font-size: 13px;
  color: #888888;
}
page .container-warp .content-block-size .cont_block .address-des .address-sou .text {
  height: 100rpx;
}
page .container-warp .content-block-size .cont_block .cont-row {
  line-height: 2;
  font-size: 30rpx;
}
page .container-warp .foot-bar {
  background-color: #FFFFFF;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}
page .container-warp .foot-bar .radio-box {
  margin-top: 10rpx;
  text-align: center;
  margin-bottom: 30rpx;
}
page .container-warp .foot-bar .radio-box .radio text {
  color: #007AFF;
  font-size: 26rpx;
}
page .container-warp .foot-bar .fl, page .container-warp .foot-bar .fr {
  height: 100rpx;
  line-height: 100rpx;
}
page .container-warp .foot-bar .fl {
  font-size: 36rpx;
  font-weight: bold;
  padding-left: 30rpx;
}
page .container-warp .foot-bar .btnSubmit {
  margin: 10rpx;
  border-radius: 40rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #3399FE;
  color: #FFFFFF;
  width: 300rpx;
}
page .container-warp .foot-bar .btnDisable {
  background-color: #888888;
}

