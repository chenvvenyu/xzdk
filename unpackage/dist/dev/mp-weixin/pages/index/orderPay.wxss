page {
  background-color: #FFFFFF;
}
page .container-warp {
  width: 690rpx;
  margin: 0 30rpx;
}
page .container-warp .title-box {
  margin: 80rpx 0;
}
page .container-warp .title-box .money {
  text-align: center;
  font-size: 60rpx;
  font-weight: bold;
  line-height: 1.2;
}
page .container-warp .title-box .des {
  color: #888888;
  font-size: 24rpx;
  text-align: center;
  line-height: 1.2;
}
page .container-warp .paytype-box .type-item {
  border-bottom: 1rpx solid #f0f0f0;
  padding: 20rpx 0;
}
page .container-warp .paytype-box .type-item .logo {
  width: 60rpx;
  height: 60rpx;
}
page .container-warp .paytype-box .type-item .logo image {
  width: 60rpx;
  height: 60rpx;
}
page .container-warp .paytype-box .type-item .name {
  width: 480rpx;
  margin-left: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
}
page .container-warp .paytype-box .type-item .radio {
  text-align: right;
  width: 130rpx;
  height: 60rpx;
  line-height: 60rpx;
}
page .container-warp .operation-box {
  margin-top: 80rpx;
}
page .container-warp .operation-box .btnSubmit {
  border-radius: 50rpx;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #3399FE;
  color: #FFFFFF;
}
page .container-warp .password-box {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 99;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
page .container-warp .password-box .pwd-content {
  width: 600rpx;
  background-color: #FFFFFF;
  border-radius: 20rpx;
  overflow: hidden;
}
page .container-warp .password-box .pwd-content .head {
  border-bottom: 1rpx solid #f0f0f0;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  margin-bottom: 50rpx;
}
page .container-warp .password-box .pwd-content .head .close {
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-weight: bold;
}
page .container-warp .password-box .pwd-content .head .title {
  width: 480rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
}
page .container-warp .password-box .pwd-content .input-list {
  text-align: center;
  margin: 50rpx 0;
}
page .container-warp .password-box .pwd-content .input-list .txtPassword {
  width: 400rpx;
  border-bottom: 1rpx solid #f0f0f0;
  text-align: center;
  margin-left: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
}
page .container-warp .password-box .pwd-content .btnCancel, page .container-warp .password-box .pwd-content .btnPay {
  margin-bottom: 50rpx;
  height: 80rpx;
  border-radius: 40rpx;
  width: 200rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #333333;
}
page .container-warp .password-box .pwd-content .btnPay {
  background-color: #3399FE;
}

