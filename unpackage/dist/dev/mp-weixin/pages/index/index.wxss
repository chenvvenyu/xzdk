page {
  width: 100%;
  background-size: 100%;
  background-color: #F7F7F7;
  background-repeat: no-repeat;
}
.container-warp {
  width: 750rpx;
}
.top-left, .top-right {
  position: absolute;
  z-index: 999;
  top: 56rpx;
}
.top-left {
  left: 50rpx;
}
.top-right {
  right: 50rpx;
}
.top-left image,
.top-right image {
  width: 90rpx;
  height: 90rpx;
  background-repeat: unset;
  border-radius: 45rpx;
}
.top-center image {
  width: 340rpx;
  height: 40rpx;
}
.content-block-size {
  border-radius: 30rpx;
  background-color: #FFFFFF;
  margin: 10px 30rpx;
  width: 690rpx;
}
.cont_block {
  padding: 20rpx;
}
.con-menu {
  padding: 40rpx 0;
  border-bottom: 1px solid #e0e0e0;
}
.con-menu .menu-text {
  width: 50%;
  text-align: center;
  font-size: 20px;
}
.con-menu .menu-text .menu-active::before {
  height: 2px;
}
.con-menu .menu-text .menu-active {
  border-bottom: 3px solid #3399FE;
  margin-top: 2px;
}
.con-address {
  padding: 0;
}
.con-address .address-icon image {
  width: 25px;
  height: 100px;
}
.address-item:last-child {
  margin-bottom: 0;
}
.address-item {
  margin-bottom: 30rpx;
  padding: 30rpx;
  border-radius: 30rpx;
  border: 1px solid #f0f0f0;
}
.address-item .tag {
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 30rpx;
  width: 46rpx;
  height: 46rpx;
  line-height: 46rpx;
  box-sizing: border-box;
  background-color: #3399FE;
  text-align: center;
  color: #fff;
  font-size: 24rpx;
  border-radius: 10rpx;
  margin-top: 8rpx;
}
.address-item .content {
  width: 70%;
  box-sizing: border-box;
  padding-right: 5%;
  border-right: 1px solid #f0f0f0;
}
.address-item .content .title {
  font-size: 14px;
  font-weight: bold;
}
.address-item .content .text {
  font-size: 13px;
  color: #888888;
}
.address-item .btn {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
}
.address-item .btn .box {
  padding-left: 30rpx;
  width: 100%;
  font-size: 12px;
  box-sizing: border-box;
}
.jj_title {
  font-size: 16px;
  color: #888888;
}
.jj-type {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  margin: 30rpx 0;
}
.jj-type .type-item {
  height: 220rpx;
  width: 240rpx;
  overflow: hidden;
  border: 4rpx solid #F5F5F5;
  border-radius: 20rpx;
  box-sizing: border-box;
  margin: 0 15rpx;
  text-align: center;
  position: relative;
}
.jj-type .type-item .tag {
  font-size: 26rpx;
  position: absolute;
  right: 0;
  top: 0;
  width: 70rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  background-color: #F5F5F5;
}
.jj-type .type-item .title {
  font-size: 36rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.jj-type .type-item .title-1 {
  font-size: 30rpx;
}
.jj-type .type-item .title-2 {
  font-size: 22rpx;
  color: #888888;
}
.jj-type .type-item .image {
  height: 160rpx;
}
.jj-type .type-item .image image {
  margin-top: 10rpx;
  width: 144rpx;
}
.jj-type .type-active {
  border-color: #3399FE;
  border-bottom-width: 12rpx;
}
.agreement-box {
  margin: 10rpx 30rpx 0;
  width: 690rpx;
}
.agreement-box text {
  color: #007AFF;
  font-size: 26rpx;
}
.agreement-box .btnSubmit {
  margin: 30rpx 0;
  border-radius: 50rpx;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #3399FE;
  color: #FFFFFF;
}
.outlet-item {
  padding: 50rpx 0;
}
.outlet-item .outlet-info {
  height: 50rpx;
  line-height: 50rpx;
  margin-bottom: 10px;
}
.outlet-item .outlet-info .logo {
  width: 50rpx;
  height: 50rpx;
  margin-right: 30rpx;
}
.outlet-item .outlet-info .logo image {
  width: 50rpx;
  height: 50rpx;
}
.outlet-item .outlet-info .fullname {
  font-size: 36rpx;
  font-weight: 200;
  line-height: 50rpx;
}
.outlet-item .address {
  color: #888888;
}
.shade {
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}
.shade .shade-content {
  background-color: #FFFFFF;
  min-height: 200rpx;
  width: 750rpx;
  position: absolute;
  bottom: 0;
  right: 0;
  left: 0;
}
.shade .shade-content .title {
  font-size: 32rpx;
  font-weight: bold;
  padding-left: 30rpx;
  margin: 30rpx 0;
}
.shade .shade-content .goodsInfo-box {
  margin: 15rpx;
}
.shade .shade-content .goodsInfo-box .goodsInfo-item {
  width: 150rpx;
  height: 150rpx;
  margin: 15rpx;
  border: 1rpx solid #F5F5F5;
  box-sizing: border-box;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  line-height: 1.2;
  font-size: 32rpx;
}
.shade .shade-content .goodsInfo-box .goods-active {
  border-color: #3399FE;
  background-color: #EBF5FF;
}
.shade .shade-content .pay-type-item {
  height: 52rpx;
  line-height: 52rpx;
  padding: 0 30rpx;
  border-radius: 26rpx;
  color: #808080;
  border: 1px solid #C0C0C0;
  margin-right: 30rpx;
}
.shade .shade-content .pay-type-select {
  color: #3399FE;
  border-color: #EBF5FF;
}
.shade .shade-content .money-box {
  margin: 30rpx;
  width: 650rpx;
  border: 1rpx solid #F5F5F5;
  padding: 20rpx;
}
.shade .shade-content .money-box .money-1 {
  margin-top: 20rpx;
}
.shade .shade-content .money-box .uni-text-gray {
  height: 60rpx;
  line-height: 60rpx;
}
.shade .shade-content .money-box .input-money {
  height: 52rpx;
  line-height: 52rpx;
  padding-left: 20rpx;
  border-radius: 26rpx;
  border: 1rpx solid #aaa;
  width: 200rpx;
}
.shade .shade-content .btnSubmit {
  margin: 50rpx 0;
  border-radius: 50rpx;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #3399FE;
  color: #FFFFFF;
}
.banner-index {
  width: 750rpx;
  height: 570rpx;
}
.banner-index .img {
  width: 100%;
  height: 100%;
}

