/* components/screen/screen.wxss */
.screen{ position: fixed; width: 100vw; height: 100vh; left: 100vw; top: 0; z-index: 100;}
.screen-left{ position: absolute; transition: all 0.5s; right: 200vw; top: 0; background: rgba(0, 0, 0, 0.7); width: 150rpx; height: 100%;}
.screen-right{ position: absolute; transition: all 0.5s; right: 0; width: 605rpx; height: 100vh; top: 0; background: #fff;}
.screen-content{  width: 605rpx; height: calc(100vh - 80rpx);}
.sc-ul{ display: flex; flex-flow: column;}
.sc-u-title{ font-size: 30rpx; font-weight: bold; color: #000; padding: 20rpx;}
.sc-u-li{ display: flex; flex-wrap: wrap;}
.sc-u-li view{  border-radius: 100rpx; background: #f7f7f7; transition: all 0.5s; display: flex; align-items: center; justify-content: center; margin-left: 20rpx; margin-bottom: 20rpx; padding:10rpx 30rpx;}
.sc-u-li view.select{ background: #9c2630; color: #fff;}

.sc-complete{ position: absolute; left: 0; bottom: 0; height: 80rpx; background: #fff; display: flex; width: 100%;}
.sc-complete view{ flex: 1; display: flex; align-items: center; justify-content: center; color: #fff; font-size: 30rpx;}
.sc-complete view:nth-child(1){ background: #a7adbe;}
.sc-complete view:nth-child(2){ background: #a92f46;}

view.left-show{ right: calc(200vw - 150rpx);}
view.right-show{ right: 100vw;}