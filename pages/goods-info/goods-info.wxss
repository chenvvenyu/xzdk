/* pages/goods-info/goods-info.wxss */
.card{ width: 710rpx; background: #fff; box-sizing: border-box; padding: 20rpx; border-radius: 16rpx; margin: 20rpx auto 0 auto;}

.one .title{ display: flex; align-items: center; justify-content: space-between; padding: 24rpx 0;}
.one .title .left{ display: flex; align-items: center; justify-content: center;}
.one .title .left .p{ font-size: 28rpx; font-weight: bold;}
.one .title .left .must{ border-radius: 30rpx; border: #f12733 1rpx solid; font-size: 20rpx; color: #f12733; padding: 0 10rpx; margin-left: 10rpx;}
.one .title .right{ display: flex; align-items: center; justify-content: center;}
.one .title .right .p{font-size: 26rpx; color: #979797; font-weight: bold;}
.one .title .right .mark{ color: #979797; border: #979797 1rpx solid; border-radius: 100rpx; width: 24rpx; height: 24rpx; display: flex; align-items: center; justify-content: center; font-size: 20rpx; margin-left: 5rpx;}
.one .name{ border-radius: 10rpx; overflow: hidden;}
.one .name .input{ background-color: #f8f8f8; font-size: 28rpx; text-align: center; padding: 20rpx 0;}
.one .tips{ padding: 24rpx 0 10rpx 0; font-size: 24rpx; color: #9e9e9e;}
.one .list{ display: flex; flex-wrap: wrap;}
.one .list .item{ border-radius: 30rpx; border: #f12733 1rpx solid; font-size: 20rpx; min-width: 100rpx; height: 50rpx; display: flex; align-items: center; justify-content: center; color: #f12733; margin-right: 10rpx; position: relative; flex-shrink: 0; padding: 0 50rpx 0 10rpx; margin-top: 20rpx;}
.one .list .item .ico{ position: absolute; right: 10rpx; top: 5rpx;}

.two .title{ display: flex; align-items: center; justify-content: space-between;}
.two .title .left{ font-size: 28rpx; font-weight: bold;}
.two .title .right{ display: flex; align-items: center; justify-content: center; background-color: #f8f8f8; width: 400rpx; height: 60rpx; border: #dcdcdc 1rpx solid; border-radius: 8rpx;}
.two .title .right .a{  width: 100rpx; display: flex; align-items: center; justify-content: center; height: 60rpx; font-size: 50rpx; border-right: #dcdcdc 1rpx solid;}
.two .title .right .min{ color: #969696 !important;}
.two .title .right .b{ display: flex; align-items: center; justify-content: center; flex: 1; height: 60rpx;}
.two .title .right .b .num{ margin-right: 20rpx;}
.two .title .right .c{ width: 100rpx; display: flex; align-items: center; justify-content: center; height: 60rpx; font-size: 40rpx; border-left: #dcdcdc 1rpx solid;}
.two .tips{ padding: 24rpx 0 10rpx 0; font-size: 24rpx; color: #9e9e9e;}
.two .tips .a{ color: #f12733; text-decoration: underline;}

.three .title{ display: flex; align-items: center; justify-content: space-between;}
.three .title .left{ font-size: 28rpx; font-weight: bold;}
.three .img{ margin-top: 30rpx; position: relative;}
.three .img image{ width: 128rpx; height: 128rpx;}
.three .img .ico{ position: absolute; left: 110rpx; top: -15rpx;}
