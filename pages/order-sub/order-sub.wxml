<view class="order-sub" wx:if="{{pageData}}">
	<navigator url="/pages/address-list/address-list?choice=orderSub" hover-class="none" class="os-a card">
		<view wx:if="{{pageData.userAddressInfo}}">
			<view>{{pageData.userAddressInfo.address}}</view>
			<view>{{pageData.userAddressInfo.name}} {{pageData.userAddressInfo.mobile}}</view>
		</view>
		<view wx:else style="color:#333;">
			您还没有收货地址，点击添加收货地址
		</view>
		<text class="iconfont icon-right"></text>
	</navigator>
