			<text>{{pageData.businessDTO.businessName}}</text>
			<text class="iconfont icon-right"></text>
		</view>
		<view class="od-c-2">
			<view class="od-c2-item" wx:for="{{pageData.productDTOList}}" wx:for-item="x" wx:for-index="y" wx:key="id">
				<image src="{{x.image}}"></image>
				<view>
					<view>{{x.name}}</view>
					<view>
						<text>x{{x.purchaseQuantity}}</text>
						<text>￥{{x.price}}</text>
					</view>
				</view>
			</view>
		</view>
