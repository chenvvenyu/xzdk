		<view class="od-c-5">
			<!-- <text>优惠￥{{pageData.discountAmount}}</text> -->
			<text>订单金额</text>
			<text>￥{{pageData.productRealPrice*1 + pageData.userBearFreight*1}}</text>
		</view>
	</view>
