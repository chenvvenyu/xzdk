/* pages/address-list/address-list.wxss */
.fix-top{position: fixed; width: 100%; left: 0; top: 0; z-index: 100;}
/* search 100rpx */
.search{ display: flex; align-items: center; justify-content: space-between; padding: 20rpx 30rpx; background: #fff; height: 60rpx;}
.search .left{ background: #F7F7F7; flex: 1; border-radius: 100rpx; display: flex; align-items: center; padding: 10rpx 15rpx;}
.search .left .input{ margin-left: 10rpx; height: 40rpx;}
.search .right{ margin-left: 40rpx;}
.search .right .img{ width: 40rpx; height: 40rpx;}
.prop{ height: 100rpx;}

.list{ display: flex; align-items: center; flex-flow: column;}
.list .item{ box-sizing: border-box; padding: 25rpx 25rpx 0 25rpx; width: 710rpx; background: #fff; border-radius: 8rpx; margin-top: 20rpx;}
.list .item .name{ padding-bottom: 20rpx;}
.list .item .name .p1{ color: #333333; font-weight: bold; font-size: 28rpx;}
.list .item .name .p2{ color: #333333; font-weight: bold; font-size: 28rpx; margin-left: 30rpx;}
.list .item .location{ color: #666666; font-size: 28rpx; padding-bottom: 10rpx;}
.list .item .button{ border-top: #F2F2F2 1rpx solid; padding: 20rpx 0; display: flex; align-items: center; justify-content: space-between;}
.list .item .button .left{ display: flex; align-items: center; justify-content: center;}
.list .item .button .left .p{ font-size: 24rpx; color: #666666; margin-left: 8rpx;}
.list .item .button .right{ display: flex; align-items: center; justify-content: center;}
.list .item .button .right .a{ display: flex; align-items: center; justify-content: center; margin-left: 60rpx;}
.list .item .button .right .a .img{ width: 48rpx; height: 48rpx;}
.list .item .button .right .a .p{ color: #666666; font-size: 24rpx; margin-left: 8rpx;}