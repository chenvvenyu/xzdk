/* pages/cash-log/cash-log.wxss */
.cl-item{ display: flex; align-items: center; justify-content: space-between; background: #fff; margin-top: 10rpx; padding: 30rpx;}
.cl-item image{ width: 60rpx; height: 60rpx;}
.cl-item > view{ flex: 1; margin-left: 20rpx;}
.cl-item > view view:nth-child(1){ display: flex; align-items: center; justify-content: space-between; font-size: 30rpx;}
.cl-item > view view:nth-child(1) text{ color: #333;}
.cl-item > view view:nth-child(2){ display: flex; align-items: center; justify-content: space-between; margin-top: 15rpx;}
.cl-item > view view:nth-child(2) text{ color: #999;}