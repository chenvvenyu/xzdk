/* pages/sendForMe/sendForMe.wxss */
#map{ height: 550rpx; width: 750rpx; position: relative; z-index: 1;}
.address{ width: 710rpx; background: #fff; position: relative; z-index: 100; margin: -50rpx auto 0 auto; border-radius: 16rpx; display: flex;}
.address .left{ display: flex; flex-flow: column; align-items: center; width: 100rpx;}
.address .left .a{ width: 40rpx; height: 40rpx; background: #2044FF; color: #fff; display: flex; align-items: center; justify-content: center; font-size: 20rpx; border-radius: 40rpx; margin-top: 60rpx;}
.address .left .line{ width: 6rpx; height: 160rpx; background: linear-gradient(180deg, #2044FF 0%, #FF6F1E 100%);}
.address .left .b{ width: 40rpx; height: 40rpx; background: #FF6F1E; color: #fff; display: flex; align-items: center; justify-content: center; font-size: 20rpx; border-radius: 40rpx; margin-bottom: 60rpx;}
.address .right{ flex:1;}
.address .right .item{ display: flex; align-items: center; height: 180rpx;}
.address .right .item .info{ flex: 1; display: flex; flex-flow: column; justify-content: center;padding-right: 10rpx;}
.address .right .item .info .name .p1{ color: #000000; font-size: 32rpx; font-weight: bold;}
.address .right .item .info .name .p2{ color: #000000; font-size: 32rpx; font-weight: bold; margin-left: 10rpx;}
.address .right .item .info .location{ color: #CCCCCC; font-size: 26rpx; margin-top: 10rpx;}
.address .right .item .choice{ width: 140rpx; flex-shrink: 0; border-left: #CDCDCD 1rpx solid; display: flex; align-items: center; justify-content: center; color: #666666; font-size: 28rpx;}

.card{ width: 710rpx; background: #fff; box-sizing: border-box; padding: 20rpx; border-radius: 16rpx; margin: 20rpx auto 0 auto;}

.one .item{ display: flex; align-items: center; justify-content: space-between;}
.one .item .title{ color: #333333; font-size: 28rpx;}
.one .info{ padding-bottom: 24rpx; border-bottom: #F5F5F5 1rpx solid;}
.one .info .choice{ display: flex; align-items: center; justify-content: center;}
.one .info .choice .p{ color: #333333; font-weight: bold; font-size: 28rpx;}
.one .item .img{ width: 48rpx; height: 48rpx;}
.one .time{ padding-top: 24rpx;}
.one .time .time-picker .time-picker-content{ display: flex; align-items: center; justify-content: center;}
.one .goods{ padding: 0 0 24rpx 0; border-bottom: #F5F5F5 1rpx solid;}
.one .goods .choice{ display: flex; align-items: center; color: #808080;}
.one .goods .choice .text{ color: #333;}


.five .reward{ display: flex; align-items: center; justify-content: space-between;}
.five .reward .item{ display: flex; align-items: center;}
.five .reward .item .p1{ color: #333333; font-size: 28rpx;}
.five .reward .item .p2{ color: #CCCCCC; font-size: 24rpx; margin-left: 10rpx;}
.five .img{ width: 48rpx; height: 48rpx;}
.five .coupon{ display: flex; align-items: center; justify-content: space-between; border-top: #F5F5F5 1rpx solid; padding: 24rpx 0 0 0; margin-top: 24rpx;}
.five .coupon .picker{ flex: 1;}
.five .coupon .picker .item{ width: 100%; text-align: right;}
.five .code{ display: flex; align-items: center; justify-content: space-between; border-top: #F5F5F5 1rpx solid; padding-top: 24rpx;}

.prop{ height: 150rpx;}


.six{ height: 100rpx; background: #fff; position: fixed; left: 0; bottom: 0; width: 100%; z-index: 100; display: flex; align-items: center; justify-content: space-between;}
.six .left{ display: flex; justify-content: center; align-items: center;}
.six .left .ques{ display: flex; justify-content: center; align-items: center; margin-left: 20rpx;}
.six .left .price{ display: flex; justify-content: center; flex-flow: column; margin-left: 10rpx;}
.six .left .title{ margin-bottom: 5rpx;}
.six .left .title .p1{ color: #333333; font-size: 24rpx;}
.six .left .title .p2{ color: #F01F06; font-size: 28rpx; font-weight: bold;} 
.six .left .agree{ display: flex; align-items: center;}
.six .left .agree .icon{ margin-right: 5rpx;}
.six .left .agree .p{ color: #999; font-size: 20rpx;}
.six .left .agree .a{ color: #2044FF; color: #999; font-size: 20rpx;}
.six .right{ display: flex; align-items: center; justify-content: center; width: 300rpx; height: 72rpx; border-radius: 100rpx; margin-right: 20rpx; border: #F5F5F5 1rpx solid; overflow: hidden;}
.six .right .df{ flex: 1; background: #FF6F1E; color: #fff; height: 100%; display: flex; align-items: center; justify-content: center;}
.six .right .pay{ flex: 1; background: #2044FF; color: #fff; height: 100%; display: flex; align-items: center; justify-content: center;}

.tips{ width: 700rpx; margin: 20rpx auto; color: #ccc; font-size: 26rpx;}

/* 高度 40+60+20+1+20+40+240+60+100+20+20=620 */
.bottom-pop .black-bg{ position: fixed; height: 100vh; width: 100vw; left: 0; top: 0; background: rgba(0, 0, 0, 0.3); z-index: 110;}
.bottom-pop .content{ position: fixed; width: 100%; height: 620rpx; background: #fff; left: 0; bottom: -620rpx; padding: 20rpx; z-index: 111; box-sizing: border-box; transition: all 0.5s;}
.bottom-pop .content .title{ display: flex; align-items: center; justify-content: space-between; height: 60rpx; border-bottom: solid #f7f7f7 1rpx; padding-bottom: 20rpx;}
.bottom-pop .content .title .cancel{ color: #ccc;}
.bottom-pop .content .title .label{ font-weight: bold;}
.bottom-pop .content .title .confirm{ color: #2044FF;}
.bottom-pop .content .type{ margin-top: 20rpx;}
.bottom-pop .content .type .type-title{ height: 40rpx; font-size: 26rpx; line-height: 40rpx;}
.bottom-pop .content .type .list{ display: flex; align-items: center; flex-wrap: wrap;}
.bottom-pop .content .type .list .item{ width: 220rpx; height: 60rpx; border: #cfcfcf 1rpx solid; margin-right: 10rpx; display: flex; align-items: center; justify-content: center; border-radius: 6rpx; margin-top: 20rpx; transition: all 0.3s;}
.bottom-pop .content .type .list .choice{ border: #2044FF 1rpx solid !important; color: #2044FF !important; background: rgba(32, 68, 255, 0.1);}
.bottom-pop .content .weight{ margin-top: 20rpx; padding-bottom: 20rpx;}
.bottom-pop .content .weight .weight-title{ height: 40rpx; font-size: 26rpx; line-height: 40rpx;}
.bottom-pop .content .weight .list{ display: flex; align-items: center; justify-content: space-around; margin-top: 20rpx;}
.bottom-pop .content .weight .list .item{ display: flex; align-items: center; justify-content: center; flex-flow: column; height: 100rpx;}
.bottom-pop .content .weight .list .item .icon{ font-size: 50rpx; transition: all 0.3s;}
.bottom-pop .content .weight .list .item .p{ font-size: 24rpx; margin-top: 10rpx; height: 40rpx; display: flex; align-items: center; justify-content: center; transition: all 0.3s;}
.bottom-pop .content .weight .list .choice .icon{ color: #2044FF !important;} 
.bottom-pop .content .weight .list .choice .p{ color: #2044FF !important;} 

.price-info .black-bg{ position: fixed; height: 100vh; width: 100vw; left: 0; top: 0; background: rgba(0, 0, 0, 0.3); z-index: 110;}
.price-info .content{ position: fixed; width: 100%; height: 620rpx; background: #fff; left: 0; bottom: -620rpx; padding: 20rpx; z-index: 111; box-sizing: border-box; transition: all 0.5s;}
.price-info .content .title{ display: flex; align-items: center; justify-content: space-between; height: 60rpx; border-bottom: solid #f7f7f7 1rpx; padding-bottom: 20rpx;}
.price-info .content .title .cancel{ color: #ccc;}
.price-info .content .title .label{ font-weight: bold;}
.price-info .content .title .confirm{ color: #2044FF;}
.price-info .content .freight .list .item{ display: flex; align-items: center; justify-content: space-between; padding: 20rpx 0; font-size: 26rpx;}
.price-info .content .freight .tip{ color: #ccc; font-size: 26rpx; display: flex; align-items: center; justify-content: center;}
.price-info .content .freight .a{ margin: 50rpx auto 0 auto; display: flex; align-items: center; justify-content: center; border: #ccc 1rpx solid; border-radius: 30rpx; padding: 10rpx 30rpx; width: 200rpx;}

.qrCode .black-bg{ position: fixed; height: 100vh; width: 100vw; left: 0; top: 0; background: rgba(0, 0, 0, 0.3); z-index: 110;}
.qrCode .content{ position: fixed; width: 100%; height: 620rpx; background: #fff; left: 0; bottom: -620rpx; padding: 20rpx; z-index: 111; box-sizing: border-box; transition: all 0.5s;}
.qrCode .content .title{ display: flex; align-items: center; justify-content: space-between; height: 60rpx; border-bottom: solid #f7f7f7 1rpx; padding-bottom: 20rpx;}
.qrCode .content .title .cancel{ color: #ccc;}
.qrCode .content .title .label{ font-weight: bold;}
.qrCode .content .title .confirm{ color: #2044FF;}
.qrCode .content .qrCodeImg{ display: flex; align-items: center; justify-content: center; padding: 20rpx 0; font-size: 26rpx;}
.qrCode .content .qrCodeImg image{ width: 240px; height: 240px;}





























