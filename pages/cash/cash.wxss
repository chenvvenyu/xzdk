/* pages/cash/cash.wxss */
.c-bank{ padding: 0 20rpx; border-bottom: #f5f5f5 1px solid;}
.c-b-add{ background: #fff; padding: 40rpx; color: #333; font-size: 15px;}
.c-b-list{ background: #ffffff; padding: 20rpx 40rpx;}
.c-b-list view{ display: flex; align-items: center;}
.c-b-list image{ width: 70rpx; height: 70rpx; border-radius: 100rpx; background: #f5f5f5;}
.c-b-list text{ color: #333; margin-left: 40rpx;}

.c-name{ background: #fff; margin: 0 auto; width: 710rpx; border-bottom: #f5f5f5 1px solid;}
.c-name input{ padding: 20rpx 40rpx; font-size: 32rpx;}
.c-name view{ color: #999; font-size: 24rpx; padding: 0rpx 40rpx 20rpx 40rpx;}

.c-amount{ padding: 0 20rpx;}
.c-a-title{ font-size: 16px; color: #999; background: #fff; padding: 40rpx 40rpx 0 40rpx;}
.c-a-input{ display: flex; background: #fff; align-items: flex-end; border-bottom: #f5f5f5 1px solid; padding: 50rpx 40rpx;}
.c-a-input text{ font-size: 20px;}
.c-a-input input{ font-size: 30px; height: 60rpx; margin-left: 20rpx;}

.c-a-all{ padding: 20rpx 40rpx; font-size: 16px; background: #fff; display: flex; align-items: center;}
.c-a-all view{ color: #999;}
.c-a-all text{ margin-left: 50rpx;}

.r-pay-type{ background: #fff; width: 710rpx; margin: 20rpx auto;}
.r-pt-title{ font-size: 16px; font-weight: bold; margin: 0 auto; border-bottom: #f5f5f5 1px solid; width: 650rpx; padding: 30rpx 0;}
.r-pt-list{ padding: 0 30rpx 30rpx 30rpx;}
.r-ptl-li{ display: flex; align-items: center; justify-content: space-between; margin-top: 30rpx;}
.r-ptl-li view{ display: flex; align-items: center;}
.r-ptl-li view image{ width: 35rpx; height: 35rpx;}
.r-ptl-li view text{ color: #333333; font-size: 15px; margin-left: 15rpx;}
.color-9c2630{ color: #2E6DFB; font-size: 40rpx;}
.color-a3a9bc{ color: #a3a9bc; font-size: 36rpx;}

.cash-log{ display: flex; align-items: center; justify-content: flex-end; margin-top: 20rpx; padding-right: 20rpx;}
.cash-log text{ background: #fff; color: #666; padding: 20rpx 30rpx; font-size: 28rpx; border-radius: 10rpx;}