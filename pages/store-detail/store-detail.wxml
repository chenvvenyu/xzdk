<view class="store-detail" wx:if="{{pageData}}">
	<view class="sd-a">
		<image mode="widthFix" src="{{pageData.backgroundImage}}"></image>
	</view>
	<view class="sd-b all-yy">
		<image class="sd-b-1" src="{{pageData.businessAvatar}}"></image>
		<view class="sd-b-2">{{pageData.businessName}}</view>
		<view class="i-gsli-2">
			<!-- <view>
				<text class="iconfont icon-xing"></text>
				<text>{{pageData.score}}</text>
			</view>
			<view>
				<text>配送费</text>
				<text>￥{{pageData.delivery}}</text>
			</view> -->
			<view>
				<text>销售</text>
				<text>{{pageData.totalSale}}</text>
			</view>
		</view>
		<view class="sd-b-3">地址：{{pageData.provinceName}}，{{pageData.cityName}}，{{pageData.regionName}}</view>
	</view>
