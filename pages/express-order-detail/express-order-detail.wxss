/* pages/order-detail/order-detail.wxss */

#map{ height: 900rpx; width: 750rpx; position: relative; z-index: 1;}
.one{ background: #fff; position: relative;}
.one .info{ position: absolute; z-index: 100; background: #fff; width: 710rpx; left: 20rpx; top: 20rpx; border-radius: 16rpx; padding: 20rpx; box-sizing: border-box;}
.one .route{ display: flex; align-items: center; justify-content: center; padding: 20rpx 0 40rpx 0;}
.one .route .left{ display: flex; align-items: center; justify-content: center; flex-flow: column;}
.one .route .center{ display: flex; align-items: center; justify-content: center; flex-flow: column; margin: 0 100rpx;}
.one .route .right{ display: flex; align-items: center; justify-content: center; flex-flow: column;}
.one .route .city{ color: #333333; font-size: 32rpx;}
.one .route .name{ color: #999999; font-size: 24rpx;}
.one .route .center .img{ width: 160rpx;}
.one .route .center .status{ color: #333333; font-size: 24rpx; margin-top: 14rpx;}
.one .info .no{ color: #666666; font-size: 24rpx; padding-bottom: 20rpx;}
.one .info .other{ border-top: #F2F2F2 1rpx solid; color: #666666; font-size: 24rpx; padding-top: 20rpx;}

.two{ background: #fff; margin-top: -20rpx; border-radius: 20rpx 20rpx 0 0; height: 100px; padding-top: 20rpx; overflow: hidden; position: relative; z-index: 100;}
.two .wait{  width: 710rpx; background: #fff; height: 100rpx; margin: 0 auto;}
.two .wait .reward{ display: flex; align-items: center; justify-content: space-between; width: 100%; height: 100%;}
.two .wait .reward .title .p{ color: #ccc; font-size: 24rpx; margin-left: 20rpx;}
.two .wait .reward .list{ display: flex; align-items: center; justify-content: center;}
.two .wait .reward .list .item{ background: #F2F2F2; border-radius: 8rpx; padding: 5rpx 10rpx; margin-right: 20rpx; color: #999; transition: all 0.5s; font-size: 28rpx;}
.two .wait .reward .pay{ background: #2044FF; color: #fff; height: 100%; padding: 0 30rpx; display: flex; align-items: center; justify-content: center; border-radius: 0 20rpx 20rpx 0;}
.two .wait .reward .list .select{ background: #FEA41D; color: #fff;}

.three{ margin-top: 20rpx; background: #fff; display: flex;}
.three .left{ display: flex; flex-flow: column; align-items: center; width: 100rpx;}
.three .left .a{ width: 40rpx; height: 40rpx; background: #2044FF; color: #fff; display: flex; align-items: center; justify-content: center; font-size: 20rpx; border-radius: 40rpx; margin-top: 60rpx;}
.three .left .line{ width: 6rpx; height: 120rpx; background: linear-gradient(180deg, #2044FF 0%, #FF6F1E 100%);}
.three .left .b{ width: 40rpx; height: 40rpx; background: #FF6F1E; color: #fff; display: flex; align-items: center; justify-content: center; font-size: 20rpx; border-radius: 40rpx;}
.three .right{ flex: 1;}
.three .right .a{ padding-top: 30rpx;}
.three .right .a .span1{ color: #333333; font-size: 26rpx; font-weight: bold;}
.three .right .a .span2{ color: #333333; font-size: 26rpx; font-weight: bold; margin-left: 16rpx;}
.three .right .a .p{ color: #666666; font-size: 26rpx; margin-top: 10rpx; height: 100rpx; padding-right: 60rpx;}
.three .right .b .span1{ color: #333333; font-size: 26rpx; font-weight: bold;}
.three .right .b .span2{ color: #333333; font-size: 26rpx; font-weight: bold; margin-left: 16rpx;}
.three .right .b .p{ color: #666666; font-size: 26rpx; margin-top: 10rpx; height: 100rpx; padding-right: 60rpx;}
.three .right .info{ padding-bottom: 100rpx;}
.three .right .info .item{ color: #666666; font-size: 26rpx; margin-top: 24rpx;}

.four{ background: #fff; display: flex; align-items: center; justify-content: space-between;}
.four .item{ width: 25%; display: flex; align-items: center; justify-content: center; flex-flow: column; padding: 30rpx 0;}
.four .item .img{ width: 40rpx; height: 40rpx;}
.four .item .p{ margin-top: 8rpx; color: #333; font-size: 24rpx;}

.five{ position: relative; background: #fff; margin-top: 20rpx; padding: 20rpx 0; overflow: hidden;}
.five .line{ position: absolute; width: 50rpx; display: flex; align-items: center; justify-content: center; left: 150rpx; top: 50rpx; height: calc(100% - 70rpx); z-index: 5;}
.five .line .content{ border-left: #ccc 1rpx dashed; width: 0; height: 100%;}
.five .item{ display: flex; position: relative; z-index: 10;}
.five .item .left{ width: 150rpx; flex-shrink: 0; text-align: center; line-height: 50rpx;}
.five .item .center{ display: flex; flex-flow: column; width: 50rpx;}
.five .item .center .a{ font-size: 26rpx; background: #ccc; color: #fff; width: 50rpx; height: 50rpx; display: flex; align-items: center; justify-content: center; border-radius: 50rpx; flex-shrink: 0;}
.five .item .center .b{ width: 50rpx; height: 50rpx; display: flex; align-items: center; justify-content: center; border-radius: 50rpx; flex-shrink: 0;}
.five .item .center .b .dian{ width: 20rpx; height: 20rpx; background: #ccc; border-radius: 20rpx;}
.five .item .center .mark{ width: 50rpx; height: 100%; background: #fff;}
.five .item .right{ padding: 0 20rpx 20rpx 20rpx;}
.five .item .color-ccc{ color: #ccc !important;}
.five .item .color-2044FF{ color: #2044FF !important;}
.five .item .bg-2044FF{ background: #2044FF !important;}
