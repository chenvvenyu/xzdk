<!--pages/order-detail/order-detail.wxml-->
<view class="order-detail">
	<view class="one">
		<view class="map">
			<map id="map" scale="13" longitude="121.622233" latitude="29.890331" markers="{{markers}}"></map>
		</view>
		<view class="info">
			<view class="no">运单号：{{pageData.waybillNumber}}</view>
			<view class="route">
				<view class="left">
					<view class="city">{{pageData.expressAddressDTO.mailDistrictStr}}</view>
				</view>
				<view class="center">
					<image mode="widthFix" class="img" src="/static/img/arrow-1.png"></image>
					<text class="status">{{pageData.expressDTO.transportStatusStr}}</text>
				</view>
				<view class="right">
					<view class="city">{{pageData.expressAddressDTO.toDistrictStr}}</view>
				</view>
			</view>
			<view class="other" wx:if="{{pageData.expressDTO.transportStatus==0}}">
				下单时间：{{pageData.expressDTO.updateTime}}</view>
			<view class="other" wx:if="{{pageData.expressDTO.transportStatus==1}}">
				接单时间：{{pageData.expressDTO.updateTime}}</view>
			<view class="other" wx:if="{{pageData.expressDTO.transportStatus==3}}">
				运输中（已揽件）：{{pageData.expressDTO.updateTime}}</view>
			<view class="other" wx:if="{{pageData.expressDTO.transportStatus==4}}">
				运输中（到站点）：{{pageData.expressDTO.updateTime}}</view>
			<view class="other" wx:if="{{pageData.expressDTO.transportStatus==5}}">
				派件（分配快递员）：{{pageData.expressDTO.updateTime}}</view>
			<view class="other" wx:if="{{pageData.expressDTO.transportStatus==6}}">
				派件中：{{pageData.expressDTO.updateTime}}</view>
			<view class="other" wx:if="{{pageData.expressDTO.transportStatus==7}}">完成：{{pageData.expressDTO.updateTime}}
			</view>
			<view class="other" wx:if="{{pageData.expressDTO.transportStatus==8}}">
				订单已取消：{{pageData.expressDTO.updateTime}}</view>
		</view>
	</view>
