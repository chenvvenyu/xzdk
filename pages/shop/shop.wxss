/* pages/shop/shop.wxss */
.search{ display: flex; align-items: center; justify-content: space-between; background-color: #fff; padding: 20rpx;}
.search .left{ display: flex; align-items: center; justify-content: center;}
.search .left .a{ width: 30rpx; height: 30rpx; margin-right: 10rpx;}
.search .left .p{ color: #333333; font-size: 28rpx; width: 110rpx; flex-shrink: 0; overflow: hidden;  white-space: nowrap;}
.search .left .b{ width: 30rpx; height: 30rpx; margin-left: 10rpx;}
.search .right{ display: flex; height: 60rpx; background-color: #F1F1F1; flex: 1; border-radius: 30rpx; justify-content: center; align-items: center;}
.search .right .ico{ color: #CCCCCC; margin-left: 30rpx;}
.search .right .input{ flex: 1; margin-right: 30rpx; font-size: 26rpx;}

.shop-swiper{ display: flex; align-items: center; justify-content: center; background:#fff; padding: 0 0 20rpx 0;}
.i-swiper{ height: 280rpx; width: 710rpx; border-radius: 10rpx; overflow: hidden;}
.i-swiper .item{ height: 100%; width: 100%;}
.i-swiper .item .a{ display: block; height: 100%; width: 100%;}
.i-swiper .item image{ height: 100%; width: 100%;}

.menu{ display: flex; flex-wrap: wrap; background: #fff;}
.menu .item{ display: flex; align-items: center; justify-content: center; flex-flow: column; width: 25%;}
.menu .item .img{ width: 72rpx; height: 72rpx;}
.menu .item .p{ margin-top: 20rpx; font-size: 26rpx; padding-bottom: 40rpx; color: #333333;}

.add{ display: flex; align-items: center; justify-content: center; background: linear-gradient(to bottom, #fff,#f7f7f7);}
.add-swiper{ height: 164rpx; width: 710rpx; border-radius: 10rpx; overflow: hidden;}
.add-swiper .item{ height: 100%; width: 100%;}
.add-swiper .item .a{ display: block; height: 100%; width: 100%;}
.add-swiper .item image{ height: 100%; width: 100%;}

.one{ overflow:hidden; white-space:nowrap; margin-top: 30rpx;}
.one .item{ display:inline-block; padding: 15rpx; background: #fff; margin-left: 17rpx;}
.one .item .img{ width: 200rpx; height: 200rpx;}
.one .item .p{ width: 200rpx; font-size: 24rpx; line-height: 30rpx; height: 60rpx; white-space: pre-wrap; margin-top: 10rpx;}
.one .item .other{ display: flex; align-items: center; justify-content: space-between;}
.one .item .other .price{ color: #F01F06; display: flex; align-items: center;}
.one .item .other .price .a{ font-size: 20rpx;}
.one .item .other .price .b{ font-size: 28rpx;}
/* .one .item .other .addToCar{} */
.one .item .other .addToCar .plus{ width: 30rpx; height: 30rpx;}

.two{ display: flex; justify-content: center; align-items: center; flex-flow: column; margin-top: 30rpx; position: relative;}
.two .bg{ height: 125rpx; width: 710rpx; border-radius: 10rpx;}
.two .content{ position: absolute; width: 710rpx; height: 90rpx; left: 20rpx; bottom: 10rpx; display: flex; z-index: 20;}
.two .content .store{ width: 90rpx; height: 90rpx;  border-radius: 10rpx; margin-left: 20rpx; background: #fff;}
.two .content .other{ height: 90rpx; margin-left: 20rpx; margin-right: 20rpx; flex: 1;}
.two .content .other .a{ color: #fff; height: 45rpx; text-shadow: #000 1px 0 0, #000 0 1px 0, #000 -1px 0 0, #000 0 -1px 0;}
.two .content .other .b{ height: 45rpx; display: flex; align-items: center; justify-content: space-between;}
.two .content .other .b .left{ display: flex; align-items: center; justify-content: center;}
.two .content .other .b .left .icon-xing{ color: #ff4700;}
.two .content .other .b .left .p{ font-size: 26rpx; margin-left: 5rpx; color: #ff4700;}
.two .content .other .b .left .price{ font-size: 26rpx; color: #666666;}
.two .content .other .b .right{ color: #666666; font-size: 26rpx;}
.two .bottom{ height: 55rpx; width: 710rpx; margin-top: -10rpx; border-radius: 10rpx; position: relative; z-index: 10; background: #f7f7f7;}
.store-product{ margin-top: 10rpx !important;}

.three{ margin-top: 20rpx;}
.three .title{ font-size: 36rpx; color: #333333; font-weight: bold; padding: 20rpx;}
.i-g-store-list{ padding: 0 20rpx 40rpx 20rpx;}
.i-gsl-item{ background: #fff; border-radius: 12rpx; padding: 20rpx; display: flex; margin-top: 20rpx;}
.i-gsl-item > image{ width: 205rpx; height: 170rpx; border-radius: 12rpx;}
.i-gsl-item > view{ flex: 1; margin-left: 20rpx; display: flex; flex-flow: column; justify-content: space-between;}
.i-gsli-1{ color: #181815; font-weight: bold; font-size: 30rpx;}
.i-gsli-2{ display: flex; align-items: center;}
.i-gsli-2 view:nth-child(1){ color: #FF4700;}
.i-gsli-2 view:nth-child(1) text:nth-child(1){ font-size: 24rpx;}
.i-gsli-2 view:nth-child(1) text:nth-child(2){ font-size: 26rpx;}
.i-gsli-2 view:nth-child(2){ margin-left: 30rpx; color: #666666; font-size: 24rpx;}
.i-gsli-3{ color: #666; font-size: 24rpx; display: flex; align-items: center; justify-content: space-between;}