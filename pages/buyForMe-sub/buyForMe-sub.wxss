/* pages/buyForMe-sub/buyForMe-sub.wxss */
.card{ width: 710rpx; background: #fff; box-sizing: border-box; padding: 20rpx; border-radius: 16rpx; margin: 20rpx auto 0 auto;}
.one .title{ color: #333333; font-size: 32rpx; font-weight: bold; padding-bottom: 20rpx;}
.one .textarea{ width: 100%; height: 150rpx;}
.one .recommend{ display: flex; align-items: center; flex-wrap: wrap;}
.one .recommend .item{ margin: 20rpx 20rpx 0 0; padding: 10rpx 20rpx; background: #F4F4F4; color: #6D7076; border-radius: 6rpx;}

.two .tab{ padding-bottom: 20rpx; border-bottom: #F5F5F5 1rpx solid; display: flex; align-items: center; justify-content: space-around;}
.two .tab .item{ width: 314rpx; height: 60rpx; display: flex; align-items: center; justify-content: center; border: #999 1rpx solid; border-radius: 60rpx; transition: all 0.5s;}
.two .tab .item .p1{ transition: all 0.5s; display: block; width: 12rpx; height: 12rpx; border-radius: 12rpx; background: #999999;}
.two .tab .item .p2{ color: #666666; font-size: 24rpx; transition: all 0.5s; margin-left: 12rpx;}
.two .tab .select{ border: #2044FF 1rpx solid !important;}
.two .tab .select .p1{ background: #FEA41D !important;}
.two .tab .select .p2{ color: #2044FF !important;}
.two .appoint{ display: flex; align-items: center; padding-top: 25rpx;}
.two .appoint .buy{ width: 40rpx; height: 40rpx; display: flex; align-items: center; justify-content: center; background: #333EDD; color: #fff; font-size: 24rpx; border-radius: 40rpx;}
.two .appoint .p{ margin-left: 20rpx; color: #999999; font-size: 28rpx;}
.two .appoint .img{ margin-left: auto; width: 48rpx; height: 48rpx; flex-shrink: 0;}
.two .nearby{ display: flex; align-items: center;}
.two .nearby .buy{ width: 40rpx; height: 40rpx; display: flex; align-items: center; justify-content: center; background: #333EDD; color: #fff; font-size: 24rpx; border-radius: 40rpx;}
.two .nearby .p{ margin-left: 20rpx; color: #999999; font-size: 28rpx;}
.two .nearby .img{ margin-left: auto; width: 48rpx; height: 48rpx; flex-shrink: 0;}

.three{ display: flex; align-items: center;}
.three .buy{ width: 40rpx; height: 40rpx; display: flex; align-items: center; justify-content: center; background: #FF6F1E; color: #fff; font-size: 24rpx; border-radius: 40rpx; flex-shrink: 0;}
.three .center{ margin-left: 20rpx; flex: 1; margin-right: 20rpx;}
.three .center .title{ color: #000; font-size: 32rpx; font-weight: bold;}
.three .center .location{ color: #CCCCCC; font-size: 26rpx; margin-top: 10rpx;}
.three .right{ width: 84rpx; height: 48rpx; border-radius: 48rpx; display: flex; align-items: center; justify-content: center; background: #F0F0F0; color: #666; font-size: 24rpx; flex-shrink: 0;}

.four .product{ display: flex; align-items: center; justify-content: space-between;}
.four .title{ color: #333333; font-size: 28rpx;}
.four .right{ display: flex; align-items: center; justify-content: center;}
.four .right .p{ color: red;}
.four .right .input{ text-align: center; width: 150rpx; font-size: 28rpx;}
.four .img{ width: 48rpx; height: 48rpx;}
.four .coupon{ display: flex; align-items: center; justify-content: space-between; border-top: #F5F5F5 1rpx solid; padding-top: 24rpx;}
.four .coupon .picker{ flex: 1;}
.four .coupon .picker .item{ width: 100%; text-align: right;}

.five .reward{ display: flex; align-items: center; justify-content: space-between;}
.five .reward .item{ display: flex; align-items: center;}
.five .reward .item .p1{ color: #333333; font-size: 28rpx;}
.five .reward .item .p2{ color: #CCCCCC; font-size: 24rpx; margin-left: 10rpx;}
.five .img{ width: 48rpx; height: 48rpx;}
.five .coupon{ display: flex; align-items: center; justify-content: space-between; border-top: #F5F5F5 1rpx solid; padding: 24rpx 0 0 0; margin-top: 24rpx;}
.five .coupon .picker{ flex: 1;}
.five .coupon .picker .item{ width: 100%; text-align: right;}

.prop{ height: 200rpx;}
.six{ height: 100rpx; background: #fff; position: fixed; left: 0; bottom: 0; width: 100%; z-index: 100; display: flex; align-items: center; justify-content: space-between;}
.six .left{ display: flex; justify-content: center; align-items: center;}
.six .left .ques{ display: flex; justify-content: center; align-items: center; margin-left: 20rpx;}
.six .left .price{ display: flex; justify-content: center; flex-flow: column; margin-left: 10rpx;}
.six .left .title{ margin-bottom: 5rpx;}
.six .left .title .p1{ color: #333333; font-size: 24rpx;}
.six .left .title .p2{ color: #F01F06; font-size: 28rpx; font-weight: bold;} 
.six .left .agree{ display: flex; align-items: center;}
.six .left .agree .icon{ margin-right: 5rpx;}
.six .left .agree .p{ color: #999; font-size: 20rpx;}
.six .left .agree .a{ color: #2044FF; color: #999; font-size: 20rpx;}
.six .right{ display: flex; align-items: center; justify-content: center; width: 204rpx; height: 72rpx; color: #fff; background: #2044FF; border-radius: 100rpx; margin-right: 20rpx;}


.price-info .black-bg{ position: fixed; height: 100vh; width: 100vw; left: 0; top: 0; background: rgba(0, 0, 0, 0.3); z-index: 110;}
.price-info .content{ position: fixed; width: 100%; height: 620rpx; background: #fff; left: 0; bottom: -620rpx; padding: 20rpx; z-index: 111; box-sizing: border-box; transition: all 0.5s;}
.price-info .content .title{ display: flex; align-items: center; justify-content: space-between; height: 60rpx; border-bottom: solid #f7f7f7 1rpx; padding-bottom: 20rpx;}
.price-info .content .title .cancel{ color: #ccc;}
.price-info .content .title .label{ font-weight: bold;}
.price-info .content .title .confirm{ color: #2044FF;}
.price-info .content .freight .list .item{ display: flex; align-items: center; justify-content: space-between; padding: 20rpx 0; font-size: 26rpx;}
.price-info .content .freight .tip{ color: #ccc; font-size: 26rpx; display: flex; align-items: center; justify-content: center;}
.price-info .content .freight .a{ margin: 50rpx auto 0 auto; display: flex; align-items: center; justify-content: center; border: #ccc 1rpx solid; border-radius: 30rpx; padding: 10rpx 30rpx; width: 200rpx;}